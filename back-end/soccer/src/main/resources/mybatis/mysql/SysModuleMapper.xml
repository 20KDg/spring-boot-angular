<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dqv5.soccer.dao.SysModuleMapper">
    <resultMap id="BaseResultMap" type="com.dqv5.soccer.entity.SysModule">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="name" property="name" jdbcType="VARCHAR"/>
        <result column="parent_id" property="parentId" jdbcType="VARCHAR"/>
        <result column="type" property="type" jdbcType="VARCHAR"/>
        <result column="url" property="url" jdbcType="VARCHAR"/>
        <result column="order_no" property="orderNo" jdbcType="TIMESTAMP"/>
        <result column="level_no" property="levelNo" jdbcType="TIMESTAMP"/>
    </resultMap>

    <select id="findList" resultMap="BaseResultMap">
        SELECT * FROM sys_module
    </select>
    <select id="findOne" parameterType="int" resultMap="BaseResultMap">
        SELECT * FROM sys_module where id = #{id}
    </select>
    <insert id="insert" parameterType="com.dqv5.soccer.entity.BasicUser">
        insert into sys_module(id,name,parent_id,type,url,order_no,level_no)
        values (null,#{name},#{parentId},#{type},#{url},#{orderNo},#{levelNo})
    </insert>
    <delete id="delete" parameterType="int">
         delete  FROM sys_module where id = #{id}
    </delete>
</mapper>
